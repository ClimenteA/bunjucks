{
  "name": "bunjucks",
  "description": "Create html static sites with Bun and Nunjucks",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./index.ts --compile --outfile server",
    "dev": "bun --watch index.ts & npx tailwindcss -i ./site/assets/tailwind.css -o ./site/assets/styles.css --watch",
    "tailwind": "npx tailwindcss -i ./site/assets/tailwind.css -o ./site/assets/styles.css --watch"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tailwindcss": "^3.4.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/nunjucks": "^3.2.6",
    "nunjucks": "^3.2.4"
  }
}